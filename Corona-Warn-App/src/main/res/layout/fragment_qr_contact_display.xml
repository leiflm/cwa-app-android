<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="qrContactDetailsViewModel"
            type="de.rki.coronawarnapp.ui.viewmodel.QRContactDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qr_contact_display_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/main_qr_contact_display_title"
        android:focusable="true">


        <ImageView
            android:id="@+id/imageViewQRContactDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>