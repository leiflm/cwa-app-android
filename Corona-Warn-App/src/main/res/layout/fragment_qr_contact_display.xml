<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="de.rki.coronawarnapp.util.formatter.FormatterSettingsHelper" />
        <variable
            name="qrContactDetailsViewModel"
            type="de.rki.coronawarnapp.ui.viewmodel.QRContactDetailsViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/layoutQRContactDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >


        <ImageView
            android:id="@+id/imageViewQRContactDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/textViewQRCodeDisplayDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewQRCodeDisplayCodeDataContent"
            android:layout_below="@id/imageViewQRContactDisplay"
            android:gravity="bottom|center_horizontal"
            android:text="@string/qr_contact_display_description" />

        <TextView
            android:id="@+id/textViewQRCodeDisplayCodeDataContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="top|center_horizontal"
            android:text='@{qrContactDetailsViewModel.qrContactDataIsInvalid() ? @string/settings_qr_contact_card_undefined : FormatterSettingsHelper.formatSettingsQRContactDetailsQRContent(qrContactDetailsViewModel.qrContactCardFirstName, qrContactDetailsViewModel.qrContactCardLastName, qrContactDetailsViewModel.qrContactCardStreetAddress, qrContactDetailsViewModel.qrContactCardPostalCode, qrContactDetailsViewModel.qrContactCardCity)}' />
    </RelativeLayout>
</layout>